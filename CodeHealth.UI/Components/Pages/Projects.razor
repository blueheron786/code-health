@page "/projects"
@inherits ProjectsPage

@using CodeHealth.UI.Components.Controls

<h1>Projects</h1>

@if (projects == null || projects.Count == 0)
{
    <p>No projects found.</p>
}
else
{
    <ul>
        @foreach (var project in projects)
        {
            <li>
                <a href="@GetProjectLink(project.Id)"><strong>@project.Name</strong></a> â€“ Last run: @project.LastRunTime
            </li>
        }
    </ul>
}

<BrowseAndScanButton OnComplete="RefreshProjectsList" />
