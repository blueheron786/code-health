@page "/project/{ProjectId}"
@inherits ProjectSummaryPage

<h3>Summary for Project: @ProjectId</h3>

@if (!isAllDataLoaded)
{
    <p>Loading...</p>
}
else
{
    <ul>
        <li><strong>Last scanned:</strong> @lastScannedTime</li>
        <li>
            <strong>Cyclomatic Complexity:</strong>
            Total @totalComplexity, Average @($"{averageComplexity:F2}")
            [<a href="@($"/project/{ProjectId}/cyclomatic-complexity")">Report</a>]
        </li>
    </ul>
}
