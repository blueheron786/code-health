@code {
    [Parameter] public Dictionary<string, double> LanguageBreakdown { get; set; }

    private readonly Dictionary<string, string> LanguageColors = new()
    {
        { "C#", "#178600" },
        { "Java", "#b07219" },
        { "Javascript", "#f1e05a" },
        { "Typescript", "#3178c6" },
        { "Kotlin", "#A97BFF"},
        { "Other", "#D3D3D3" },
    };

    private string GetBarColor(string language) =>
        LanguageColors.TryGetValue(language, out var color) ? color : "#95a5a6";
}

<strong>Language Distribution:</strong>
<div class="language-distribution-bar">
    <div class="bar">
        @for (int i = 0; i < LanguageBreakdown.Count; i++)
        {
            var lang = LanguageBreakdown.ElementAt(i);
            var isFirst = i == 0;
            var isLast = i == LanguageBreakdown.Count - 1;

            var roundedLeftStyle = "border-top-left-radius: 6px; border-bottom-left-radius: 6px;";
            var roundedRightStyle = "border-top-right-radius: 6px; border-bottom-right-radius: 6px;";

            var radiusStyle = isFirst ? roundedLeftStyle :
                              isLast ? roundedRightStyle :
                              "";

            if (isFirst && isLast)
            {
                radiusStyle = roundedLeftStyle + roundedRightStyle;
            }

            // Use margin-left to create a "gap" effect between segments (but not before the first)
            var separatorStyle = !isFirst ? "margin-left: 2px;" : "";

            <div class="segment"
                 style="width: @(lang.Value * 100)%; background-color: @GetBarColor(lang.Key); @radiusStyle @separatorStyle">
            </div>
        }
    </div>

    <div class="legend">
        @foreach (var lang in LanguageBreakdown)
        {
            <div class="legend-item">
                <div class="color-box" style="background-color: @GetBarColor(lang.Key)"></div>
                <span>@lang.Key (@($"{lang.Value * 100:F1}%"))</span>
            </div>
        }
    </div>
</div>

<style>
    .language-distribution-bar {
        width: 100%;
        margin-bottom: 10px;
        font-size: 90%;
    }

    .bar {
        width: 100%;
        height: 12px;
        display: flex;
        overflow: hidden;
    }

    .segment {
        height: 100%;
    }

    .legend {
        display: flex;
        flex-wrap: wrap;
        margin-top: 10px;
        gap: 10px;
    }

    .legend-item {
        display: flex;
        align-items: center;
        font-size: 90%;
    }

    .color-box {
        width: 12px;
        height: 12px;
        margin-right: 5px;
        border-radius: 3px;
    }
</style>
